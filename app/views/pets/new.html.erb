<head>
<style> 
input {
  width: 15%;
  padding: 5px 10px;
  margin: 10px 0;
  margin-left: 40px;
  box-sizing: border-box;
  border: 3px solid #ccc;
  -webkit-transition: 0.5s;
  transition: 0.5s;
  outline: none;
}

input[type=text]:focus {
  border: 3px solid #555;
}
</style>
</head>

<br>
<div align="center">
<h1> Add Dog to Your Kennel </h1>
</div>

<% if flash[:messages] %>
<% flash[:messages] %>
<%end%>




<%= form_for @pet do |f| %>
       Name <br> <%= f.text_field :name%>
  <br> Age <br> <%= f.number_field :age %>
  <br> Breed <br> <%= f.text_field :breed %>
  <br> Size <br> <%= f.text_field :size %>
  <br> Gender <br> <%= f.text_field :gender %>
  <br> Image <br> <%= f.text_field :image %>
  <br> Breeder <br> <%= f.collection_select :breeder_id, Breeder.all, :id, :name %>
  <br> <%= f.submit "Create a Pet" %>
<% end %>
</div>